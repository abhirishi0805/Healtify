<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Gender_fragment">



    <TextView
        android:id="@+id/gender_text"
        android:layout_width="match_parent"
        android:text="Select your Gender"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:layout_height="wrap_content">

    </TextView>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_below="@+id/gender_text"
       android:layout_marginTop="50dp"
       android:orientation="horizontal"
       android:weightSum="10"
       android:layout_height="350dp">

       <RelativeLayout
           android:layout_width="0dp"
           android:id="@+id/relative_man"
           android:layout_margin="5dp"
           android:background="@drawable/drawable_gender_unselected"
           android:layout_height="match_parent"
           android:layout_weight="5">

           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/lottie_man"
               android:layout_width="300dp"
               android:layout_height="300dp"
               app:lottie_autoPlay="true"
               app:lottie_fileName="man.json"
               app:lottie_loop="true" app:lottie_speed="1"
               android:layout_centerInParent="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>



       </RelativeLayout>

       <RelativeLayout
           android:layout_width="0dp"
           android:layout_margin="5dp"
           android:id="@+id/relative_woman"
           android:background="@drawable/drawable_gender_unselected"
           android:layout_height="match_parent"
           android:layout_weight="5">


           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/lottie_woman"
               android:layout_width="300dp"
               android:layout_height="300dp"
               app:lottie_autoPlay="true"
               app:lottie_fileName="woman.json"
               app:lottie_loop="true" app:lottie_speed="1"
               android:layout_centerInParent="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>


       </RelativeLayout>

   </LinearLayout>






        <ImageView
            android:elevation="40dp"
            android:layout_width="50dp"
            android:padding="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/foward"
            android:background="@drawable/bottom_bar_layout"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp">

        </ImageView>





</RelativeLayout>